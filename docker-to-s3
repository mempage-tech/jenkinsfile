pipeline{
    agent any
    stages{
        stage('scm'){
            steps{
                git 'https://github.com/mempage-tech/Mempage-repo.git'
            }
        }
        stage('build'){
            steps{
                sh 'docker build -t dockerimage:1.0.0 .'
            }
        }
        stage('compress image'){
            steps{
                sh 'tar -cvf dockerimage.tar .'
            }
        }
        stage('deploy'){
            steps{
                sh "aws configure set region $AWS_DEFAULT_REGION" 
                sh "aws configure set aws_access_key_id $AWS_ACCESS_KEY_ID"  
                sh "aws configure set aws_secret_access_key $AWS_SECRET_ACCESS_KEY"
                sh "aws s3 mb s3://my-new-bucket-for-docker"
                sh "aws s3 cp /var/lib/jenkins/workspace/aws-s3/dockerimage.tar s3://my-new-bucket-for-docker"
            }
        }
    }
}
    
        
